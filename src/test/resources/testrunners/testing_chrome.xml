<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Regression Suite" verbose="3" parallel="tests"
	thread-count="4">
	
	<listeners>
		<listener
			class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<!-- <listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" /> -->
	</listeners>


	<test name="Login Page Test_chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test_chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>
	
	<test name="Search Test_chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.SearchResultsPageTest" />
		</classes>
	</test>

	<test name="Product Info Page Test_chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
	
	<!--<test name="Registration Page Test_chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.RegistrationPageTest" />
		</classes>
	</test>-->
	
	
</suite>